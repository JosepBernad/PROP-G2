<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:controller="survey.SurveyDetailController" prefHeight="720" prefWidth="1080">

    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>

    <Label fx:id="surveyTitle" styleClass="form-header-title"/>
    <Label fx:id="surveyDescription"/>

    <VBox fx:id="questionsBox" minWidth="900" minHeight="600" spacing="10"/>

    <JFXButton onAction="#analiseSurvey" ripplerFill="BLACK"
               text="Analize survey" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>

    <JFXButton onAction="#backButtonPressed" ripplerFill="BLACK"
               text="Back" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
</VBox>