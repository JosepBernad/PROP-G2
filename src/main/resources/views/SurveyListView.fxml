<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane alignment="center" hgap="10" minHeight="500.0" prefWidth="900.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="survey.SurveyListController">

    <padding>
        <Insets bottom="3" left="3" right="3" top="3" />
    </padding>

    <Text styleClass="form-header-title" text="List of existing surveys" GridPane.columnIndex="0" GridPane.rowIndex="0" />

    <Label fx:id="userName" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />

    <JFXListView fx:id="surveyLabelList" onMouseClicked="#handleMouseClick" prefHeight="400.0" prefWidth="800.0" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
        <JFXButton minWidth="100" onAction="#createSurveyButtonPressed" ripplerFill="BLACK" text="Create" />

        <Text GridPane.columnIndex="0" />

        <JFXButton minWidth="100" onAction="#importSurveysButtonPressed" ripplerFill="BLACK" text="Import" />

        <Text GridPane.columnIndex="0" />

        <JFXButton minWidth="100" onAction="#exportSurveyButtonPressed" ripplerFill="BLACK" text="Export" />

        <Text GridPane.columnIndex="0" />

        <JFXToggleButton contentDisplay="CENTER" minWidth="100" text=" " toggleColor="#e81a1a" />

        <Label alignment="CENTER" text="Filter by my surveys"/>

    </VBox>

    <JFXButton minWidth="100" onAction="#logOutButtonPressed" ripplerFill="BLACK" text="Log Out" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Text GridPane.columnIndex="0" GridPane.rowIndex="3" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
