<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.112" minHeight="500.0"
          prefWidth="900.0"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="survey.SurveyListController">

    <padding>
        <Insets bottom="3" left="3" right="3" top="3"/>
    </padding>

    <Text text="List of existing surveys" styleClass="form-header-title" GridPane.columnIndex="0"
          GridPane.rowIndex="0"/>

    <Label fx:id="userName" GridPane.columnIndex="0" GridPane.halignment="RIGHT"
          GridPane.rowIndex="0"/>

    <JFXListView fx:id="surveyLabelList" onMouseClicked="#handleMouseClick" prefHeight="400.0" prefWidth="800.0"
                 GridPane.columnIndex="0"
                 GridPane.rowIndex="1"/>

    <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
        <JFXButton onAction="#createSurveyButtonPressed" ripplerFill="BLACK"
                   text="Create" minWidth="100"/>

        <Text GridPane.columnIndex="0"/>

        <JFXButton onAction="#importSurveysButtonPressed" ripplerFill="BLACK"
                   text="Import" minWidth="100"/>

        <Text GridPane.columnIndex="0"/>

        <JFXButton onAction="#exportSurveyButtonPressed" ripplerFill="BLACK"
                   text="Export" minWidth="100"/>

        <Text GridPane.columnIndex="0"/>

    </VBox>

    <JFXButton onAction="#logOutButtonPressed" ripplerFill="BLACK"
               text="Log Out" minWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Text GridPane.columnIndex="0" GridPane.rowIndex="3"/>

</GridPane>
